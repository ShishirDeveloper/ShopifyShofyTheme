<footer>
  <div class="tp-footer-area tp-footer-style-2" data-bg-color="footer-bg-white">
     <div class="tp-footer-top pt-95 pb-40">
        <div class="container">
           <div class="row">

              {% for item in section.blocks %}
               {% assign b = item.settings %}
                {% case item.type %}
                  {% when 'logo' %}
                     <div class="col-xl-4 col-lg-3 col-md-4 col-sm-6">
                        <div class="tp-footer-widget footer-col-1 mb-50">
                           <div class="tp-footer-widget-content">
                              <div class="tp-footer-logo">
                                 <a href="{{ shop.url }}">
                                    {% if b.logo != blank %}
                                       <img src="{{ b.logo | img_url: 'master' }}" alt="logo">
                                    {% else %}
                                       <h2>Logo</h2>
                                    {% endif %}

                                 </a>
                              </div>
                              <p class="tp-footer-desc">{{ b.logo_content }}</p>
                              {% if b.show  %}
                                 <div class="tp-footer-social">
                                    {% assign twitter = settings.social_twitter_link %}
                                    {% assign facebook = settings.social_facebook_link %}
                                    {% assign linkedin = settings.social_linkedin_link %}
                                    {% assign vimeo = settings.social_vimeo_link %}

                                    {% if facebook != blank %}
                                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                                    {% endif %}

                                    {% if twitter != blank %}
                                       <a href="{{ twitter }}"><i class="fa-brands fa-twitter"></i></a>
                                    {% endif %}

                                    {% if linkedin != blank %}
                                       <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                                    {% endif %}

                                    {% if vimeo != blank %}
                                       <a href="#"><i class="fa-brands fa-vimeo-v"></i></a>
                                    {% endif %}




                                 </div>
                              {% endif %}

                           </div>
                        </div>
                     </div>
       
                  {% when 'menu' %}
                     <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                        <div class="tp-footer-widget footer-col-2 mb-50">
                           <h4 class="tp-footer-widget-title">{{ b.menu_title }}</h4>
                           <div class="tp-footer-widget-content">
                              <ul>
                                 {% for link in b.menu.links %}
                                    {% if b.menu != blank %}
                                       <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                                    {% else %}
                                       <li><a href="#">Track Orders</a></li>
                                       <li><a href="#">Shipping</a></li>
                                       <li><a href="#">Wishlist</a></li>
                                       <li><a href="#">My Account</a></li>
                                       <li><a href="#">Order History</a></li>
                                       <li><a href="#">Returns</a></li>
                                    {% endif %}

                                 {% endfor %}

                              </ul>
                           </div>
                        </div>
                     </div>
       
                  {% when "content" %}
                     <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                        <div class="tp-footer-widget footer-col-4 mb-50">
                           <h4 class="tp-footer-widget-title">{{ b.contant_title }}</h4>
                           <div class="tp-footer-widget-content">
                              <div class="tp-footer-talk mb-20">
                                 <span>{{ b.contant_text }}</span>
                                 <h4><a href="tel:670-413-90-762">+670 413 90 762</a></h4>
                              </div>
                              <div class="tp-footer-contact">
                                 <div class="tp-footer-contact-item d-flex align-items-start">
                                    <div class="tp-footer-contact-icon">
                                       <span>
                                          <svg width="18" height="16" viewBox="0 0 18 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                             <path d="M1 5C1 2.2 2.6 1 5 1H13C15.4 1 17 2.2 17 5V10.6C17 13.4 15.4 14.6 13 14.6H5" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                             <path d="M13 5.40039L10.496 7.40039C9.672 8.05639 8.32 8.05639 7.496 7.40039L5 5.40039" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                             <path d="M1 11.4004H5.8" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                             <path d="M1 8.19922H3.4" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                                          </svg>
                                       </span>
                                    </div>
                                    <div class="tp-footer-contact-content">
                                       <p><a href="mailto:shofy@support.com">{{ b.emil }}</a></p>
                                    </div>
                                 </div>
                                 <div class="tp-footer-contact-item d-flex align-items-start">
                                    <div class="tp-footer-contact-icon">
                                       <span>
                                          <svg width="17" height="20" viewBox="0 0 17 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                             <path d="M8.50001 10.9417C9.99877 10.9417 11.2138 9.72668 11.2138 8.22791C11.2138 6.72915 9.99877 5.51416 8.50001 5.51416C7.00124 5.51416 5.78625 6.72915 5.78625 8.22791C5.78625 9.72668 7.00124 10.9417 8.50001 10.9417Z" stroke="currentColor" stroke-width="1.5"/>
                                             <path d="M1.21115 6.64496C2.92464 -0.887449 14.0841 -0.878751 15.7889 6.65366C16.7891 11.0722 14.0406 14.8123 11.6313 17.126C9.88298 18.8134 7.11704 18.8134 5.36006 17.126C2.95943 14.8123 0.210885 11.0635 1.21115 6.64496Z" stroke="currentColor" stroke-width="1.5"/>
                                          </svg>
                                       </span>
                                    </div>
                                    <div class="tp-footer-contact-content">
                                       <p><a href="{{ b.map }}" target="_blank">{{ b.locationn }}</a></p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  {% else %}
                     
                {% endcase %}
              {% endfor %}


           </div>
        </div>
     </div>

     <div class="tp-footer-bottom">
        <div class="container">
           <div class="tp-footer-bottom-wrapper">
              <div class="row align-items-center">
                 <div class="col-md-6">
                    <div class="tp-footer-copyright">
                       {{ section.settings.copy_right }}
                    </div>
                 </div>
                 <div class="col-md-6">
                    <div class="tp-footer-payment text-md-end">
                       <p>
                        {% if section.settings.payment_icon != blank %}
                           <img src="{{ section.settings.payment_icon | img_url: 'master' }}" alt="">
                        {% else %}
                           Put your icon
                        {% endif %}
                       </p>
                       <ul class="list list-payment" role="list">
                        {%- for type in shop.enabled_payment_types -%}
                          <li class="list-payment__item">
                            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                 </div>
              </div>
           </div>
        </div>
     </div>
  </div>
</footer>



{% schema %}
  {
      "name": " Footer",
      "settings": [
         {
            "type": "richtext",
            "id": "copy_right",
            "label": "Copy Right",
            "default": "<p>Â© 2023 All Rights Reserved  |  HTML Template by.</p>"
         },
         {
            "type": "image_picker",
            "id": "payment_icon",
            "label": "Payment"
         }
      ],
      "blocks": [
          {
              "name": "Logo Text",
              "type": "logo",
              "limit": 1,
              "settings": [
               {
                  "type": "image_picker",
                  "id": "logo",
                  "label": "Logo"
               },
               {
                  "type": "textarea",
                  "id": "logo_content",
                  "label": "Logo Title",
                  "default": "We are a team of designers and developers that create high quality WordPress"
               },
               {
                  "type": "checkbox",
                  "id": "show",
                  "label": "Show Social",
                  "default": true
               }
              ]
          },



          {
              "name": "Menu",
              "type": "menu",
              "limit": 2,
              "settings": [
               {
                  "type": "text",
                  "id": "menu_title",
                  "label": "Menu Title",
                  "default": "My Account"
               },
               {
                  "type": "link_list",
                  "id": "menu",
                  "label": "Menu",
                  "default": "footer"
               }
              ]
          },


          {
              "name": "Content Info",
              "type": "content",
              "limit": 1,
              "settings": [
               {
                  "type": "text",
                  "id": "contant_title",
                  "label": "Title",
                  "default": "Talk To Us"
               },
               {
                  "type": "text",
                  "id": "contant_text",
                  "label": "Text",
                  "default": "Got Questions? Call us"
               },
               {
                  "type": "text",
                  "id": "emil",
                  "label": "Email",
                  "default": "shofy@support.com"
               },
               {
                  "type": "textarea",
                  "id": "locationn",
                  "label": "Location",
                  "default": "79 Sleepy Hollow St. Jamaica, New York 1432"
               },
               {
                  "type": "textarea",
                  "id": "map",
                  "label": "Map",
                  "default": "https://www.google.com/maps/place/Sleepy+Hollow+Rd,+Gouverneur,+NY+13642,+USA/@44.3304966,-75.4552367,17z/data=!3m1!4b1!4m6!3m5!1s0x4cccddac8972c5eb:0x56286024afff537a!8m2!3d44.3304928!4d-75.453048!16s%2Fg%2F1tdsjdj4"
               }
              ]
          }
      ]
  }
  {% endschema %}